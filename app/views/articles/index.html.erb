<h1> Articles </h1>

<ul>
    <% @articles.each do |article| %>
        <% unless article.archived? %>
            <li>
                <%= link_to article.title, article %>
            </li>
        <% end %>
    <% end %>

    <li>
        <%= link_to "New", new_article_path(@article) %>
    </li>
</ul>